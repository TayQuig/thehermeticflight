---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details class="group py-5 cursor-pointer">
  <summary class="flex justify-between items-center font-serif list-none text-lg text-hermetic-white group-hover:text-hermetic-gold transition-colors duration-300">
    <span>{question}</span>
    <span class="transition-transform duration-300 group-open:rotate-180 flex-shrink-0 ml-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-hermetic-gold">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </span>
  </summary>
  <div 
    class="mt-4 text-base text-gray-300 leading-relaxed prose prose-invert max-w-none prose-p:my-3 prose-ul:my-2 prose-li:my-1 prose-a:text-hermetic-sulfur hover:prose-a:text-hermetic-gold" 
    set:html={answer} 
  />
</details>

<style>
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
