---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details class="group py-4 border-b border-white/10 cursor-pointer">
  <summary class="flex justify-between items-center font-medium list-none text-lg text-indigo-100 group-hover:text-amber-200 transition-colors duration-300">
    <span>{question}</span>
    <span class="transition group-open:rotate-180">
      <!-- Simple chevron icon -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-300/70">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </span>
  </summary>
  <!-- We use set:html because the JSON answer contains <p> tags -->
  <div class="mt-4 text-base text-gray-300 leading-relaxed prose prose-invert max-w-none prose-p:my-2" set:html={answer} />
</details>

<style>
  /* Hides the default ugly triangle marker on webkit browsers */
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>